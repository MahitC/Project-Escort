public class Troop {
   private int damage;
   private int hp;
   private int[] loc;
   private boolean hasMoved;
   private boolean canAttack;
   private String name;
   Troop capPoint;
    public Troop(int damage, int hp, int xDisp, int yDisp, String name){
            this.damage=damage;
            this.hp = hp;
            loc = new int[2];
            loc[0] = xDisp;
            loc[1] = yDisp;
    }
    public String getName(){
        return name;
    }
    public void allowAttack(){
        canAttack = true;
    }
    public boolean canAttack(int xDisp, int yDisp){
        if(xDisp>1||xDisp<-1){
            xDisp = xDisp/Math.abs(xDisp);
        }else{
            return false;
        }
        if(yDisp>1||yDisp<-1){
            yDisp = yDisp/Math.abs(yDisp);
        }else{
            return false;
        }
        return !hasMoved;
    }
    public int attack (Troop enemy){
       return enemy.hp-= damage;      
    }
    public boolean isDead(){
        if(hp<=0){
            return true;
        }
        return false;
    }
    public int[] getLoc(){
        return loc;
    }

    public void allowMove(){

    }
    public boolean canMove(int xDisp, int yDisp){
        if(xDisp>1||xDisp<-1){
            xDisp = xDisp/Math.abs(xDisp);
        }else{
            return false;
        }
        if(yDisp>1||yDisp<-1){
            yDisp = yDisp/Math.abs(yDisp);
        }else{
            return false;
        }
        return !hasMoved;
    }
    public void move(int xDisp, int yDisp){
        if(canMove(xDisp,yDisp)){
            loc[0] += xDisp;
            loc[1] += yDisp;
            hasMoved = true;
        }
        
    }

    
}
